@model IEnumerable<WebCinema.Models.Cinema.Comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Bình luận</h1>
        <p>
            @Html.ActionLink("Tạo mới", "Create")
        </p>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Movie.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.UserAccount.UserName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Date_)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Content)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Movie.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UserAccount.UserName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Date_)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Content)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.CommentId }) |
                                                @Html.ActionLink("Chi tiết", "Details", new { id = item.CommentId }) |
                                                @Html.ActionLink("Xóa", "Delete", new { id = item.CommentId })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
