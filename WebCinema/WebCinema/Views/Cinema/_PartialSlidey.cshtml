@model IEnumerable<WebCinema.Models.Cinema.Movie>

@foreach (var item in Model)
{
    <li>
        <img src="~/images/Movies/@item.Poster" alt="" style="width:1300px; height:500px;">
        <p class='title'>@item.Name</p>
        @{if (item.Description_.Length > 150)
                {
                <p class='description'>
                    @item.Description_.Substring(0, 100)<text>...</text>
                </p>
            }
            else
            {
                <p class='description'>
                    @item.Description_<text>...</text>
                </p>
            }
        }
    </li>
}
