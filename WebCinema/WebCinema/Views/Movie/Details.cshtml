    <!-- single -->
    <div class="single-page-agile-main">
        <div class="container">
            <!-- /w3l-medile-movies-grids -->
            <div class="agileits-single-top">
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("Index","Cinema")">Trang Chủ</a></li>
                    <li class="active">Chi Tiết</li>
                </ol>
            </div>
            <div class="single-page-agile-info">
                <!-- /movie-browse-agile -->
                <div class="show-top-grids-w3lagile">
                    <div class="song">
                        <div class="song-info">
                            <h1>@Model.Name</h1>
                        </div>
                        <div class="video-grid-single-page-agileits" style="display:inline-block">
                            @*<div data-video="N8OpkYN7M5w" id="video"></div>*@
                            <iframe width="560" height="315" src="https://www.youtube.com/embed/@Model.Trailer" frameborder="0" allowfullscreen style="float:left"></iframe>
                            <img src="~/images/Movies/@Model.Poster" alt="Thẻ ALT của Poster phim" class="img-responsive" style="width:400px; float:left; margin-left:150px;" />
                        </div>
                    </div>
                    <div class="col-sm-8 single-left">
                        <div class="now-showing-list">
                            <div>
                                <div class="movie-ticket-book">
                                    <div class="clearfix"></div>
                                    <div class="bahubali-details">
                                        <h4>Ngày ra mắt: </h4><p>@Model.ReleaseDate.Value.ToShortDateString()</p>
                                        <h4>Thời lượng: </h4><p>@Model.Length_</p>
                                        <h4>Đạo diễn: </h4><p>@Model.Director</p>
                                        <h4>Ngôn ngữ: </h4><p>@Model.Language_</p>
                                        <h4>Thể loại: </h4><p>@ViewBag.TheLoai</p>
                                        <h4>Diễn viên: </h4><p>@Model.Description_</p>
                                    </div>
                                </div>
                            </div>
                            @Html.Action("_PartialShowTime", new { Id = Model.MovieId })
                            <div class="clearfix"></div>
                            <div class="fb-comments" data-href=http://watcinema.somee.com/Movie/Detail/"+@Model.MovieId data-colorscheme="light" data-numposts="10" data-width="750"></div>
                        </div>
                        <!-- End Thuấn -->
                    </div>
                    <div class="clearfix"> </div>
                </div>
                @Html.Action("_PartialRandomMovie", "Movie")
            </div>
            <!-- //w3l-latest-movies-grids -->
        </div>
