                </form>
            </div>
            <div class="w3l_sign_in_register">
                <ul>
                    <li><i class="fa fa-phone" aria-hidden="true"></i> (+84) 1698 681 685</li>
                    @{
                        if (Session["Account"] != null)
                        {
                            <li><a href="#" data-toggle="modal">@ViewBag.ThongBao</a></li>
                        }
                        else
                        {
                            <li><a href="#" data-toggle="modal" data-target="#myModal" id="dangnhap">@ViewBag.ThongBao</a></li>
                        }
                    }
                </ul>
            </div>
            <div class="clearfix"> </div>
