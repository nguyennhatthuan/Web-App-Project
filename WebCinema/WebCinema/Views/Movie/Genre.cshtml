@model IEnumerable<WebCinema.Models.MovieGenre>
@{
    ViewBag.Title = "Thể Loại";
    Layout = "~/Views/Shared/_LayoutUserCinema.cshtml";
}
<div class="browse-agile-w3ls general-w3ls">
    <div class="tittle-head">
        <h4 class="latest-text">@ViewBag.GenreName </h4>
        <div class="container">
            <div class="agileits-single-top">
                <ol class="breadcrumb">
                    <li><a href="index.html">Trang Chủ</a></li>
                    <li class="active">Thể Loại</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="browse-inner">
            @foreach (var item in Model)
            {
                <div class="col-md-2 w3l-movie-gride-agile">
                    <a href="@Url.Action("Details", "Movie", new { id = item.MovieId })" class="hvr-shutter-out-horizontal">
                        <img src="~/images/Movies/@item.MoviePoster" title="album-name" alt=" " style="width:182px; height:268px;" />
                        <div class="w3l-action-icon"><i class="fa fa-play-circle" aria-hidden="true"></i></div>
                    </a>
                    <div class="mid-1">
                        <div class="w3l-movie-text">
                            <h6><a href="@Url.Action("Details", "Movie", new { id = item.MovieId })">@item.MovieName</a></h6>
                        </div>
                        <div class="mid-2">
                            <p><center>@item.ReleaseDate.Value.ToShortDateString()</center></p>
                            <div class="clearfix"></div>
                        </div>

                    </div>
                    <div class="ribben two">
                        <p>NEW</p>
                    </div>
                </div>
            }
            <div class="clearfix"> </div>
        </div>
        <!-- /latest-movies1 -->
        @Html.Action("_PartialRandomMovie", "Movie")
    </div>
</div>
